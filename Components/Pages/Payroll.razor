@page "/payroll"
@inject NavigationManager Navigation

<div class="payroll-container p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Payroll Dashboard</h2>
        <a class="btn btn-outline-success" @onclick="NavigateToHR">
            <i class="bi bi-arrow-left"></i> Back to HR
        </a>
    </div>

    <div class="card shadow-sm p-4 mb-4">
        <h4>Salary Details</h4>
        <p>This is where salary details, deductions, and payroll history will be displayed.</p>
    </div>

    <div class="card shadow-sm p-4 mb-4">
        <h4>Generate Payslips</h4>
        <p>Admins can generate monthly payslips here.</p>
        <button class="btn btn-success">Generate</button>
    </div>
</div>

<style>
    .payroll-container {
        max-width: 1000px;
        margin: auto;
        background-color: #f9fdf9;
        border-radius: 8px;
    }

    .card {
        border: 1px solid #3D7C47;
    }

        .card h4 {
            color: #2F6132;
        }
</style>

@code {
    private void NavigateToHR()
    {
        Navigation.NavigateTo("/hr");
    }
}
