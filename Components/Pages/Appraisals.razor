<style>
    .payroll-container {
        max-width: 1000px;
        margin: auto;
        background-color: #f9fdf9;
        border-radius: 8px;
    }

    .card {
        border: 1px solid #3D7C47;
    }

        .card h4 {
            color: #2F6132;
        }
</style>

