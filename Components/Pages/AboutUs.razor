@page "/aboutus"
@using Loginapp.Components.Layout
@layout MainLayout

<!-- Custom CSS inside this page -->
<style>
    /* Styling for ContactUs component */
    .contact-container {
        background-color: #2F6132;
        color: white;
        padding: 20px;
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap;
        font-family: Arial, sans-serif;
    }

    .contact-section {
        margin: 10px;
        text-align: center;
    }
    /* Fix contact section text color */
    .contact-container p,
    .contact-container h4,
    .contact-container a,
    .contact-container ul li {
        color: white !important;
    }

        .contact-section h4 {
            margin-bottom: 10px;
            font-size: 1.2em;
        }

        .contact-section p {
            margin: 5px 0;
            font-size: 0.9em;
        }

    .fab {
        margin-right: 8px;
        font-size: 1.2em;
    }

    .social-link {
        color: white;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .social-link:hover {
            color: #D1FF6D;
            text-decoration: underline;
        }
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5fdf6;
        color: #2e3d29;
    }

    h2, h4 {
        color: #1b5e20;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    h2 {
        font-size: 2rem;
    }

    h4 {
        font-size: 1.5rem;
    }

    p, ul li {
        font-size: 1.05rem;
        line-height: 1.6;
        color: #3c4c3a;
    }

    img {
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(0, 80, 0, 0.1);
    }

    .carousel-inner {
        height: 700px;
    }

        .carousel-inner .carousel-item img {
            height: 100%;
            width: 100%;
            object-fit: cover;
            object-position: center;
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 80, 0, 0.6);
        border-radius: 50%;
    }

    .container {
        padding: 3rem 1rem;
    }

    .row {
        margin-bottom: 3rem;
    }

    .bg-dark {
        background-color: #1b4020 !important;
    }

        .bg-dark h4 {
            color: #ffffff;
        }

        .bg-dark p,
        .bg-dark a {
            color: #cce3d5;
        }

            .bg-dark a:hover {
                color: #9ef1b3;
                text-decoration: none;
            }

    ul {
        list-style: none;
        padding-left: 0;
    }

        ul li::before {
            content: '✓';
            color: #4caf50;
            font-weight: bold;
            margin-right: 8px;
        }

    @@media (max-width: 768px) {
        .carousel-inner

    {
        height: 250px;
    }

    h2 {
        font-size: 1.6rem;
    }

    h4 {
        font-size: 1.3rem;
    }

    p, ul li {
        font-size: 1rem;
    }

    }
</style>

<!-- Carousel -->
<div id="ffcCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="images/ffc-aboutus.png" class="d-block w-100" alt="FFC Factory">
        </div>
        <div class="carousel-item">
            <img src="images/ffc3.jpeg" class="d-block w-100" alt="Agriculture">
        </div>
        <div class="carousel-item">
            <img src="images/ffc4.jpeg" class="d-block w-100" alt="Sustainability">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#ffcCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#ffcCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Content Sections -->
<div class="container mb-5">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <img src="images/ffc3.jpeg" class="img-fluid" alt="FFC History">
        </div>
        <div class="col-md-6">
            <h2>Leading Pakistan's Fertilizer Industry</h2>
            <p>Founded in 1978 as a joint venture with Haldor Topsoe, FFC has become Pakistan’s largest urea producer.</p>
            <ul>
                <li>Initial production: 570,000 metric tonnes</li>
                <li>Current capacity: Over 3 million tonnes/year</li>
                <li>Over 100 million tonnes delivered to farmers</li>
            </ul>
        </div>
    </div>

    <div class="row align-items-center mb-4 flex-md-row-reverse">
        <div class="col-md-6">
            <img src="images/ffc-global.jpg" class="img-fluid" alt="Global Recognition">
        </div>
        <div class="col-md-6">
            <h2>Global Recognition</h2>
            <p>
                FFC is internationally recognized as a member of the UN Global Compact, IFA, and AFA.
                In 2019, it secured first place in PSX Top 25 Companies for the second year in a row.
            </p>
        </div>
    </div>

    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <img src="images/FFCNIGHT.jpeg" class="img-fluid" alt="Vision & Innovation">
        </div>
        <div class="col-md-6">
            <h2>Vision & Innovation</h2>
            <p>
                With 20+ years of recognition in governance and transparency, FFC leads Pakistan’s agricultural growth through the trusted 'Sona' brand and strategic investments.
            </p>
        </div>
    </div>

    <div class="row align-items-center mb-4 flex-md-row-reverse">
        <div class="col-md-6">
            <img src="images/ffc-awards.jpg" class="img-fluid" alt="Corporate Excellence">
        </div>
        <div class="col-md-6">
            <h2>Corporate Excellence</h2>
            <ul>
                <li>Best Corporate & Sustainability Report Awards 2024</li>
                <li>Best ESG Reporting for 2nd Consecutive Year</li>
                <li>Recognized in safety, CSR, and transparency</li>
            </ul>
        </div>
    </div>
</div>

<ContactUs />
