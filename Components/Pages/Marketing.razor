@page "/marketing"
@using Loginapp.Services
@inject NavigationManager Navigation
@inject UserSessionService SessionService

<div class="landing-container">
    <div class="top-bar d-flex justify-content-between align-items-center px-4 py-2">
        <div class="d-flex align-items-center">
            <div class="dropdown">
                <i class="fas fa-user-circle fa-2x dropdown-toggle cursor-pointer"
                   data-bs-toggle="dropdown"></i>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Display</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><hr class="dropdown-divider" /></li>
                </ul>
            </div>
            <div class="user-info ms-2">
                
            </div>
        </div>
        <div class="d-flex align-items-center">
            <i class="fas fa-search mx-2"></i>
            <i class="fas fa-bell mx-2"></i>
            <i class="bi bi-house-fill icon-style fs-5 mx-3 cursor-pointer" @onclick="@(() => Navigation.NavigateTo("/"))"></i>
            <img src="images/FFC-logo.png" class="ffc-logo ms-2" />
        </div>
    </div>

    <div class="tiles-background">
        <div class="tiles-wrapper container py-5">
            <div class="row g-4">
                @foreach (var tile in marketingTiles)
                {
                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="tile p-4">
                            <i class="fas fa-bullhorn icon mb-2"></i>
                            <h5 class="mb-0">@tile</h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <ContactUs />
</div>

<style>
    .landing-container {
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .top-bar {
        background: linear-gradient(to right, #000000, #1c1c1c);
        height: 70px;
        color: white;
    }

    .ffc-logo {
        width: 100px;
        height: auto;
    }

    .tiles-background {
        background-size: cover;
        background-position: center;
        padding: 3rem 0;
    }

    .tiles-wrapper {
        position: relative;
        z-index: 2;
    }

    .tile {
        width: 100%;
        border: none;
        text-align: center;
        transition: all 0.3s ease;
        border-radius: 15px;
        box-shadow: none;
    }

        .tile:hover {
            transform: translateY(-5px);
        }

    .tile-link {
        text-decoration: none;
        color: inherit;
    }

    .icon {
        font-size: 28px;
        color: white;
    }

    .cursor-pointer {
        cursor: pointer;
    }

    .user-info strong, .user-info small {
        color: white;
    }
</style>

@code {
    List<string> marketingTiles = new()
    {
        "Promotions", "Dealer Network", "Market Research", "CRM"
    };

  
}
