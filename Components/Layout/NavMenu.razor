@using Microsoft.AspNetCore.Components.Routing

<head>
    <!-- Bootstrap Icons CDN (NO space in URL!) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
        }

        .top-row {
            background-color: #1A3C34;
            padding: 1rem;
            color: white;
        }

        .nav-scrollable nav {
            background-color: #1A3C34;
            color: white;
            min-height: 100vh;
            padding: 20px;
        }

        .nav-item {
            margin-bottom: 0.5rem;
        }

        .nav-link {
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1rem;
            text-decoration: none;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .nav-link i {
                font-size: 1.2rem;
                line-height: 1;
                vertical-align: middle;
            }

            .nav-link:hover,
            .nav-link.active {
                background-color: #2E4F44;
                color: white;
            }
    </style>
</head>

<!-- Top Navbar -->
<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Loginapp</a>
    </div>
</div>

<!-- Fake checkbox to simulate toggler (if needed later) -->
<input type="checkbox" title="Navigation menu" class="navbar-toggler" hidden />

<!-- Sidebar Navigation -->
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill"></i>
                <span>Home</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="register">
                <i class="bi bi-pencil-square"></i>
                <span>Registration</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="contact-us">
                <i class="bi bi-telephone-fill"></i>
                <span>Contact Us</span>
            </NavLink>
        </div>
    </nav>
</div>
