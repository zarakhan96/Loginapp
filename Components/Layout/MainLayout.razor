@inherits LayoutComponentBase

<style>

    .toast-container {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1055; /* must be higher than everything else */
    }

    .toast {
        background-color: #333;
        color: white;
        border-radius: 8px;
        padding: 1rem;
        min-width: 250px;
        max-width: 300px;
        opacity: 0.95;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }

    .toast-header {
        background-color: #444;
        color: white;
        border-bottom: 1px solid #555;
    }

    .toast.success {
        background-color: #28a745;
    }

    .toast.error {
        background-color: #dc3545;
    }

    .toast.info {
        background-color: #17a2b8;
    }

    .top-row {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 10px;
        padding: 10px;
        background-color: #000; /* solid black now */
    }

    a.neon-btn {
        all: unset;
        display: inline-block;
        padding: 6px 14px;
        border: 2px solid transparent;
        border-radius: 6px;
        background: #000;
        color: white;
        font-size: 14px;
        transition: all 0.3s ease;
        text-decoration: none !important;
        cursor: pointer;
    }

        a.neon-btn:hover,
        a.neon-btn.active {
            border-color: lawngreen;
            color: lawngreen;
        }



    .top-row a i {
        color: black; /* Default icon color */
        font-size: 24px;
        transition: color 0.3s ease;
    }

    .top-row a:hover i {
        color: #00ffff; /* Neon cyan on hover */
    }


    .page {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: rgba(0, 0, 0, 0.7);
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        background-color: white; /* change from #111 to white */
        color: black; /* text color changed from white to black */
    }

    .content {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row">
            <NavLink href="/login" class="neon-btn" activeClass="active">Login</NavLink>
            <NavLink href="/aboutus" class="neon-btn" activeClass="active">About</NavLink>
            <NavLink href="/FAQ" class="neon-btn" activeClass="active">FAQ</NavLink>
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
           
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<Toast />


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
